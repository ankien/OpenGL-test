#version 410

out vec4 fragColor;
in vec3 triColor;
in vec2 outTexCoord;

uniform sampler2D ourTexture;
uniform sampler2D ourTexture2;
uniform vec3 lightColor;

void main() {
    fragColor = mix(texture(ourTexture,outTexCoord) * vec4(lightColor * triColor, 1.0), texture(ourTexture2,outTexCoord) * vec4(lightColor,1.0), 0.4);
    
}